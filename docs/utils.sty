\newcommand{\img}[3][]{    
	\begin{figure}[!htb]
		\begin{center}
			\includegraphics[width=\textwidth]{#3}
		\end{center}
		\caption[#2]{#2\ifx&#1&\else~\footnotemark[#1]\fi}
	\end{figure}
}

\newcommand{\tab}[3][]{
